// compound assignment with augmented addition
var a =4;
var b =3;
var c=5;
 a+=45;
b+=5;
c+=6;
console.log(a);
console.log(b);
console.log(c);
// compound assignment with augmented subtraction
var a =4;
var b =3;
var c=5;
 a-=45;
b-=5;
c-=6;
console.log(a);
console.log(b); 
console.log(c);
// compound assignment with augmented multiplication
var a =4;
var b =3;
var c=5;
 a*=45;
b*=5;
c*=6;
console.log(a);
console.log(b);
console.log(c);
 
 
// compound assignment with augmenteddivision
 var a =4;
var b =3;
var c=5;
 a/=45;
b/=5;
c/=6;
console.log(a);
console.log(b);
console.log(c);
 
